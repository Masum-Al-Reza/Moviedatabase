<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="7dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="@string/userdetails" />

            <TextView
                android:id="@+id/name_manage_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="TextView" />

            <TextView
                android:id="@+id/manage_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_manage_user"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="TextView" />

            <TextView
                android:id="@+id/manage_user_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manage_user_email"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/textView2"
                android:text="TextView" />

            <TextView
                android:id="@+id/manage_user_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manage_user_number"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="164dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"
                android:text="TextView" />
        </RelativeLayout>

</androidx.cardview.widget.CardView>